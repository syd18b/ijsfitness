<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/background"
    android:padding="24dp">

  <!-- Profile Image -->
  <ImageView
      android:id="@+id/profileImage"
      android:layout_width="120dp"
      android:layout_height="120dp"
      android:src="@drawable/ic_default_profile"
      android:scaleType="centerCrop"
      android:layout_marginBottom="16dp"
      android:background="@drawable/profile_circle_background"
      android:clickable="true"
      android:focusable="true" />

  <!-- User Info Fields -->
  <TextView
      android:id="@+id/profileName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Full Name"
      android:textSize="18sp"
      android:textStyle="bold"
      android:layout_marginBottom="8dp" />

  <TextView
      android:id="@+id/profileEmail"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Email"
      android:textSize="18sp"
      android:textStyle="bold"
      android:layout_marginBottom="8dp" />

  <TextView
      android:id="@+id/profileAge"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Age: 21"
      android:layout_marginBottom="16dp" />

  <TextView
      android:id="@+id/profileHeight"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Height: 5 ft 7 in"
      android:layout_marginBottom="8dp" />

  <TextView
      android:id="@+id/profileWeight"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Weight: 154.3 lbs"
      android:layout_marginBottom="16dp" />

  <!-- Edit Profile Button -->
  <Button
      android:id="@+id/editProfile"
      android:layout_width="225dp"
      android:layout_height="wrap_content"
      android:text="Edit Profile" />

  <Button
      android:id="@+id/workoutPlan"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Workout Plan" />


  <!-- Workout History RecyclerView -->
  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rvWorkoutHistory"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_marginTop="16dp"
      android:layout_weight="1"
      android:scrollbars="vertical"
      android:layout_marginBottom="24dp" />

</LinearLayout>


