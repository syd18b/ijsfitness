
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="16dp">

  <!-- Profile Image -->
  <ImageView
    android:id="@+id/profileImage"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:src="@drawable/ic_default_profile"
    android:scaleType="centerCrop"
    android:layout_marginBottom="16dp"
    android:background="@drawable/profile_circle_background"
    android:clickable="true"
    android:focusable="true"
    android:contentDescription="Profile picture"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

  <!-- User Info Fields -->
  <TextView
    android:id="@+id/profileName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Full Name"
    android:textSize="18sp"
    android:textStyle="bold"
    android:layout_marginBottom="8dp"
    app:layout_constraintTop_toBottomOf="@id/profileImage"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

  <TextView
    android:id="@+id/profileAge"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Age: 21"
    android:layout_marginBottom="16dp"
    app:layout_constraintTop_toBottomOf="@id/profileName"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

  <TextView
    android:id="@+id/profileHeight"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Height: 5 ft 7 in"
    android:layout_marginBottom="8dp"
    app:layout_constraintTop_toBottomOf="@id/profileAge"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

  <TextView
    android:id="@+id/profileWeight"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Weight: 154.3 lbs"
    android:layout_marginBottom="16dp"
    app:layout_constraintTop_toBottomOf="@id/profileHeight"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

  <!-- Toggle for Edit Mode -->
  <Switch
    android:id="@+id/editProfileToggle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Edit Profile"
    android:layout_marginBottom="16dp"
    app:layout_constraintTop_toBottomOf="@id/profileWeight"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

  <!-- EditText fields (hidden initially) -->
  <EditText
    android:id="@+id/editProfileName"


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Enter Full Name"
    android:visibility="gone"
    android:layout_marginBottom="8dp"
    app:layout_constraintTop_toBottomOf="@id/editProfileToggle"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>


  <EditText
    android:id="@+id/editProfileAge"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Enter Age"
    android:visibility="gone"
    android:layout_marginBottom="8dp"
    app:layout_constraintTop_toBottomOf="@id/editProfileName"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Profile Image -->
    <ImageView
      android:id="@+id/profileImage"
      android:layout_width="120dp"
      android:layout_height="120dp"
      android:src="@drawable/ic_default_profile"
      android:scaleType="centerCrop"
      android:layout_marginBottom="16dp"
      android:background="@drawable/profile_circle_background"
      android:clickable="true"
      android:focusable="true" />


  <EditText
    android:id="@+id/editProfileHeight"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Enter Height (cm)"
    android:visibility="gone"
    android:layout_marginBottom="8dp"
    app:layout_constraintTop_toBottomOf="@id/editProfileAge"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

  <EditText
    android:id="@+id/editProfileWeight"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Enter Weight (kg)"
    android:visibility="gone"
    android:layout_marginBottom="8dp"
    app:layout_constraintTop_toBottomOf="@id/editProfileHeight"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

  <!-- Add Workout Button -->
  <Button
    android:id="@+id/btnAddWorkout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Add Workout"
    android:layout_marginTop="24dp"
    android:layout_marginBottom="24dp"
    app:layout_constraintTop_toBottomOf="@id/editProfileWeight"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

  <!-- Workout History Section -->
  <TextView
    android:id="@+id/workoutHistoryHeading"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Workout History"
    android:textSize="18sp"
    android:textStyle="bold"
    android:layout_marginBottom="8dp"
    app:layout_constraintTop_toBottomOf="@id/btnAddWorkout"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/rvWorkoutHistory"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/workoutHistoryHeading"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Toggle for Edit Mode -->
    <Switch
      android:id="@+id/editProfileToggle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Edit Profile"
      android:layout_marginBottom="16dp" />

    <!-- EditText fields for name, age, height, and weight (hidden initially) -->
    <EditText
      android:id="@+id/editProfileName"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Enter Full Name"
      android:visibility="gone"
      android:layout_marginBottom="8dp" />

    <EditText
      android:id="@+id/editProfileAge"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Enter Age"
      android:visibility="gone"
      android:layout_marginBottom="8dp" />

    <EditText
      android:id="@+id/editProfileHeight"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Enter Height (cm)"
      android:visibility="gone"
      android:layout_marginBottom="8dp" />

    <EditText
      android:id="@+id/editProfileWeight"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Enter Weight (kg)"
      android:visibility="gone"
      android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/editProfile"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:text="Edit Profile" />

</LinearLayout>

