<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/background"
  tools:context=".RegisterActivity">

  <TextView
    android:id="@+id/first_name_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/first_name_label"
    android:textAppearance="@style/TextAppearance.AppCompat.Large"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginTop="32dp"
    android:layout_marginStart="16dp" />

  <EditText
    android:id="@+id/editFirstName"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:hint="@string/first_name_hint"
    android:inputType="textPersonName"
    app:layout_constraintTop_toTopOf="@+id/first_name_label"
    app:layout_constraintStart_toEndOf="@+id/first_name_label"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginEnd="16dp" />

  <TextView
    android:id="@+id/last_name_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/last_name_label"
    android:textAppearance="@style/TextAppearance.AppCompat.Large"
    app:layout_constraintTop_toBottomOf="@+id/first_name_label"
    app:layout_constraintStart_toStartOf="@+id/first_name_label"
    android:layout_marginTop="16dp" />

  <EditText
    android:id="@+id/editLastName"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:hint="@string/last_name_hint"
    android:inputType="textPersonName"
    app:layout_constraintTop_toTopOf="@+id/last_name_label"
    app:layout_constraintStart_toEndOf="@+id/last_name_label"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginEnd="16dp" />

  <TextView
    android:id="@+id/email_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/email_label"
    android:textAppearance="@style/TextAppearance.AppCompat.Large"
    app:layout_constraintTop_toBottomOf="@+id/last_name_label"
    app:layout_constraintStart_toStartOf="@+id/last_name_label"
    android:layout_marginTop="16dp" />

  <EditText
    android:id="@+id/editTextEmail"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:hint="@string/email_hint"
    android:inputType="textEmailAddress"
    app:layout_constraintTop_toTopOf="@+id/email_label"
    app:layout_constraintStart_toEndOf="@+id/email_label"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginEnd="16dp" />

  <TextView
    android:id="@+id/password_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/password_label"
    android:textAppearance="@style/TextAppearance.AppCompat.Large"
    app:layout_constraintTop_toBottomOf="@+id/email_label"
    app:layout_constraintStart_toStartOf="@+id/email_label"
    android:layout_marginTop="16dp" />

  <EditText
    android:id="@+id/editTextPassword"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:inputType="textPassword"
    android:hint="@string/password_hint"
    app:layout_constraintTop_toTopOf="@+id/password_label"
    app:layout_constraintStart_toEndOf="@+id/password_label"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginEnd="16dp" />

  <TextView
    android:id="@+id/age_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Age"
    android:textAppearance="@style/TextAppearance.AppCompat.Large"
    app:layout_constraintTop_toBottomOf="@+id/password_label"
    app:layout_constraintStart_toStartOf="@+id/password_label"
    android:layout_marginTop="16dp" />

  <Spinner
      android:id="@+id/editAge"
      android:layout_width="336dp"
      android:layout_height="30dp"
      android:layout_marginEnd="16dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/age_label"
      app:layout_constraintTop_toTopOf="@+id/age_label" />

  <Button
    android:id="@+id/button_register"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/register_button"
    android:backgroundTint="@color/magenta"
    app:layout_constraintTop_toBottomOf="@+id/age_label"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginTop="32dp"
    android:layout_marginStart="32dp" />


  <Button
    android:id="@+id/button_cancel_registration"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@android:string/cancel"
    android:backgroundTint="@color/magenta"
    app:layout_constraintTop_toTopOf="@+id/button_register"
    app:layout_constraintStart_toEndOf="@+id/button_register"
    android:layout_marginStart="16dp" />

    <Spinner
        android:id="@+id/spinner_college"
        android:layout_width="208dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/college_label"
        app:layout_constraintEnd_toEndOf="@+id/editTextPassword"
        app:layout_constraintStart_toStartOf="@+id/editTextPassword"
        app:layout_constraintTop_toTopOf="@+id/college_label" />


</androidx.constraintlayout.widget.ConstraintLayout>
