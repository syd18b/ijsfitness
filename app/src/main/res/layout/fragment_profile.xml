
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <!-- Profile Image -->
    <ImageView
      android:id="@+id/profileImage"
      android:layout_width="120dp"
      android:layout_height="120dp"
      android:src="@drawable/ic_default_profile"
      android:scaleType="centerCrop"
      android:layout_marginBottom="16dp"
      android:background="@drawable/profile_circle_background"
      android:clickable="true"
      android:focusable="true" />

    <!-- User Info Fields -->
    <TextView
      android:id="@+id/profileName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Full Name"
      android:textSize="18sp"
      android:textStyle="bold"
      android:layout_marginBottom="8dp" />

    <TextView
      android:id="@+id/profileAge"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Age: 21"
      android:layout_marginBottom="16dp" />

    <TextView
      android:id="@+id/profileHeight"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Height: 5 ft 7 in"
      android:layout_marginBottom="8dp" />

    <TextView
      android:id="@+id/profileWeight"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Weight: 154.3 lbs"
      android:layout_marginBottom="16dp" />


    <!-- Toggle for Edit Mode -->
    <Switch
      android:id="@+id/editProfileToggle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Edit Profile"
      android:layout_marginBottom="16dp" />

    <!-- EditText fields for name, age, height, and weight (hidden initially) -->
    <EditText
      android:id="@+id/editProfileName"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Enter Full Name"
      android:visibility="gone"
      android:layout_marginBottom="8dp" />

    <EditText
      android:id="@+id/editProfileAge"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Enter Age"
      android:visibility="gone"
      android:layout_marginBottom="8dp" />

    <EditText
      android:id="@+id/editProfileHeight"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Enter Height (cm)"
      android:visibility="gone"
      android:layout_marginBottom="8dp" />

    <EditText
      android:id="@+id/editProfileWeight"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Enter Weight (kg)"
      android:visibility="gone"
      android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/editProfile"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:text="Edit Profile" />

</LinearLayout>
